    print"\n{3}-Exit..."
    choose = raw_input(opt)
    if choose == '1':
      work()
    elif choose == '2':
        info()
    elif choose == '3':
        cls()
        print color.green + "Exiting..." + color.End
        exit()
   
    elif choose == '':
        menu()
    elif choose == ' ':
         menu()
    elif choose == '  ':
        menu()
    else:
        cls()
        print(choose + color.red + " Not Found!" + color.End)
        meinmenu()
def work():
    os.system("prinf'\033]2;Webinfo/Start\a'")
    cls()
    print"""
                                      mm                                   mmmm
     *@@@@*     @     *@@@*          m@@             *@@@@*              m@* **
       *@@     m@@     m@             @@               @@                @@*
        @@m   m@@@m   m@     mm@*@@   @@m@@@@m         @@  *@@@@@@@@m   @@@@@    m@@*@@m
         @@m  @* @@m  @*    m@*   @@  @@    *@@        @@    @@    @@    @@     @@*   *@@
