"""
    web = raw_input("Enter ip or url: ")
    time.sleep(0.50)
    start2 = whois.whois(web)
    print(start2)
    time.sleep(0.50)
    tryagain()
def tryagain():
    try4 = raw_input("Do you want to try again? [y/n] ")
    if try4 == 'y':
      work()
    elif try4 == 'n':
        meinmenu()
    else:
        tryagain()
def meinmenu():
    try3 = raw_input("Do you want to back to mein menu? [y/n] ")
    if try3 == 'y':
      menu()
    elif try3 == 'n':
        cls()
        print(color.green + "Exiting..." + color.End)
        exit()
    else:
         meinmenu()
def info():
    cls()
