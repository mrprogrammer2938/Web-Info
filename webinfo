    print color.blue + """
https://github.com/msprogrammer2938""" + color.End
    time.sleep(1)
    meinmenu()
def meinmenu():
    try2 = raw_input("\npress Enter...")
    if try2 == '':
      menu()
    else:
         menu()
if __name__ == '__main__':
  try:
     menu()
  except KeyboardInterrupt:
      print("\nCtrl + C")
      print("Exiting...")
      exit()
