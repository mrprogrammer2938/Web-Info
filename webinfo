import os
import time
import whois
class color:
      green = '\033[92m'
      red = '\033[91m'
      End = '\033[0m'
      blue = '\033[96m'
opt = color.green + "\nwebinfo ~" + color.red + "#" + color.End
ip = "\nEnter ip: "
def cls():
    os.system("clear")
def start():
    try:
       import whois
       menu()
    except:
          cls()
          os.system("pip install python-whois")
          time.sleep(0.50)
          meinmenu()
    try:
       from colorama import Fore,init
       menu()
    except:
          os.system("pip install colorama")
          time.sleep(0.50)
          meinmenu()
def menu():
    os.system("prinf'\033]2;Webinfo\a'")
